{
	"name": "pkg-size",
	"version": "0.0.0-semantic-release",
	"description": "Measure the size of your npm package distribution",
	"keywords": [
		"cli",
		"pkg-size",
		"package",
		"distribution",
		"size",
		"npm"
	],
	"license": "MIT",
	"repository": "privatenumber/pkg-size",
	"publishConfig": {
		"access": "public"
	},
	"funding": "https://github.com/privatenumber/pkg-size?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"bin/cli.js",
		"dist"
	],
	"main": "dist/pkg-size.js",
	"bin": "bin/cli.js",
	"scripts": {
		"build": "tsc",
		"lint": "xo"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/*.{js,ts}": "xo"
	},
	"dependencies": {
		"brotli-size": "^4.0.0",
		"byte-size": "^7.0.0",
		"chalk": "^4.1.0",
		"cli-simple-table": "^1.0.0",
		"gzip-size": "^6.0.0",
		"libnpmpack": "^2.0.0",
		"meow": "^8.0.0",
		"tar": "^6.0.5"
	},
	"devDependencies": {
		"@types/tar": "^4.0.4",
		"husky": "^4.3.0",
		"lint-staged": "^10.5.2",
		"type-fest": "^0.20.2",
		"typescript": "^4.1.2",
		"xo": "^0.35.0"
	}
}
