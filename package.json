{
	"name": "pkg-size",
	"version": "0.0.0-semantic-release",
	"description": "Measure the size of your npm package distribution",
	"keywords": [
		"cli",
		"pkg-size",
		"package",
		"distribution",
		"size",
		"npm"
	],
	"license": "MIT",
	"repository": "privatenumber/pkg-size",
	"funding": "https://github.com/privatenumber/pkg-size?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"bin/cli.js",
		"dist"
	],
	"main": "dist/pkg-size.js",
	"bin": "bin/cli.js",
	"scripts": {
		"tsd": "tsc -d --emitDeclarationOnly --declarationDir dist",
		"build": "rm -rf dist && rollup -c && npm run tsd",
		"lint": "xo"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/*.{js,ts}": "xo"
	},
	"dependencies": {
		"pacote": "^11.1.4"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^11.0.0",
		"@rollup/plugin-typescript": "^8.0.0",
		"@types/glob-to-regexp": "^0.4.0",
		"@types/tar": "^4.0.4",
		"brotli-size": "^4.0.0",
		"builtin-modules": "^3.1.0",
		"byte-size": "^7.0.0",
		"cac": "^6.6.1",
		"chalk": "^4.1.0",
		"cli-simple-table": "^1.0.1",
		"glob-to-regexp": "^0.4.1",
		"gzip-size": "^6.0.0",
		"husky": "^4.3.0",
		"libnpmpack": "^2.0.0",
		"lint-staged": "^10.5.3",
		"rollup": "^2.34.2",
		"rollup-plugin-filesize": "^9.1.0",
		"rollup-plugin-terser": "^7.0.2",
		"rollup-plugin-typescript2": "^0.29.0",
		"tar": "^6.0.5",
		"type-fest": "^0.20.2",
		"typescript": "^4.1.2",
		"xo": "^0.35.0"
	}
}
